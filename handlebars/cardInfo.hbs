<div class="overlay"></div>
<div id="cardInfoModal">
  <div id="details" class="left">
    <div id="cardData">
      <span class="fa fa-tasks"></span>
      <div>
        <h2>{{title}}</h2>
        <p>in list {{list_id}}</p>
        <div id="lblCtnr"></div>
        <div id="dueCtnr"></div>
        <p>Description <a id="openEditDescription" href="#"> Edit </a></p>
        <p id="cardDescription">{{description}}</p>
        <div id="editDescription">
          <form>
            <textarea id="newDescription" name="newDescription">{{description}}</textarea>
            <button class="btn" type="submit">Save</button>
            <a href="#" id="closeEditDescription" class="fa fa-times"></a>
          </form>
        </div>
      </div>
    </div>
    <div id="cardComments">
      <span class="fa fa-comment-o">
        <div class="userIcon">LS</div>
      </span>
      <div>
        <h3>Add Comment</h3>
        <form method="post" action="#">
          <textarea id="newComment" name="newComment" placeholder="Write a comment..."></textarea>
          <button type="submit" class="btn" disabled>Save</button>
        </form>
      </div>
    </div>
    <div id="activity">
      <span class="fa fa-sticky-note-o"></span>
      <div>
        <h3 class="left">Activity</h3>
        <a class="right" href="#">Show Details</a>
        {{#if comments}}
          <ul class="clear" id="commentList">
            {{#each comments}}
              <li data-comment={{id}}>
                <div class="userIcon">LS</div>
                <h4>Launch School Student</h4>
                <div class="comment">{{content}}</div>
                <p>{{formatDate datetime}} - <a href="#">Edit</a> - <a href="#">Delete</a></p>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
    </div>
  </div>
  <div id="actions" class="right">
    <a class="fa fa-times right" href="#"></a>
    <div class="clear">
      <h3>Add</h3>
      <ul>
        <li id="labelAction">
          <span class="fa fa-tags"></span> Labels
        </li>
        <li id="checklistAction">
          <span class="fa fa-check-square-o"></span> Checklist
        </li>
        <li id="dueDateAction">
          <span class="fa fa-clock-o"></span> Due Date
        </li>
      </ul>
    </div>
  </div>
</div>
