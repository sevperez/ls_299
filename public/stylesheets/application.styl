// STYLUS - application.styl

@import "whitespace-reset.css"
@import "mixins"

*,
*:before,
*:after
  box-sizing: border-box

html,
body
  background-color: colors.default
body
  font: 14px fonts.default, Arial, Helvetica, sans-serif
  color: colors.txt.main
header
  height: 40px
  padding: 7px
  background: colors.shaded.lowBlk
  text-align: center
  div
    display: inline-block
    height: 100%
    input
      height: 100%
      width: 180px
      padding: 5px
      border-radius: 5px
      font: 14px fonts.default, Arial, Helvetica, sans-serif
      color: colors.txt.main
      & + span
        position: relative
        right: 20px
  #logo
    margin-left: -90px
    h2
      font: 24px fonts.logo, cursive
      font-weight: bold
      color: colors.shaded.medWht
      &:hover
        color: colors.shaded.highWht
  #userIcon
    height: 26px
    width: 26px
    padding-top: 4px
    text-align: center
    font-weight: bold
    background-color: colors.bg.tertiary
    border-radius: 100%

#board
  padding: 7px 10px
#boardHeader
  height: 40px
  h3
    font-size: 20px
    font-weight: bold
    color: colors.txt.secondary
  a
    color: #ffffff
    text-decoration: underline
    span
      padding-right: 5px

#lists
  display: inline-block
  vertical-align: top
  .list
    vertical-align: top
    width: 275px
    display: inline-block
    margin-right: 10px
    margin-bottom: 20px
    border-radius: 5px
    background-color: colors.bg.secondary
    h4
      margin: 10px
      cursor: pointer
    .cardList
      .card
        height: 75px
        padding: 8px
        margin: 10px
        border-radius: 5px
        background-color: #ffffff
        cursor: pointer
        &:hover
          background-color: colors.shaded.medWht
        .labels
          margin-bottom: 5px
          li
            display: inline-block
            height: 8px
            width: 40px
            margin-right: 5px
            border-radius: 3px
        .icons
          margin-top: 8px
          li
            display: inline-block
            margin-right: 20px
            vertical-align: top
            color: colors.shaded.medBlk
            span
              padding-right: 5px
    // a
    //   display: block
    //   padding: 10px
    //   color: colors.shaded.medBlk
    //   &:hover
    //     background-color: colors.shaded.vLowBlk
    //     color: colors.shaded.highBlk
    //     text-decoration: underline
#addList,
#addCard
  display: inline-block
  div
    padding: 5px
    border-radius: 5px
    width: 275px
    &:first-of-type
      display: none
      position: absolute
      height: 80px
      background-color: colors.bg.secondary
      input[type="text"]
        height: 36px
        width: 100%
        padding: 5px
        margin-bottom: 3px
        border-radius: 5px
        font: 14px fonts.default, Arial, Helvetica, sans-serif
        color: colors.txt.main
      .btn
        color: #ffffff
        background-color: colors.bg.green
        font-weight: bold
        margin-right: 10px
      a
        position: relative
        top: 3px
        color: colors.txt.tertiary
        font-size: 22px
    &:last-of-type
      height: 40px
      padding: 12px 10px
      color: colors.shaded.medWht
      background-color: colors.shaded.lowBlk
      cursor:  pointer
      &:hover
        background-color: colors.shaded.medBlk
        color: colors.shaded.highWht
#addCard
  div:first-of-type
    border-top-right-radius: 0
    border-top-left-radius: 0
  div:last-of-type
    display: block
    padding: 10px
    color: colors.shaded.medBlk
    border-top-right-radius: 0
    border-top-left-radius: 0
    &:hover
      background-color: colors.shaded.vLowBlk
      color: colors.shaded.highBlk
      text-decoration: underline

.left
  float: left
.right
  float: right
.clear
  clear: both

.btn
  height: 30px
  border-radius: 5px
  padding: 5px 15px
  font: 14px fonts.default, Arial, Helvetica, sans-serif
  cursor: pointer

.green
  background: colors.bg.green
.yellow
  background: colors.bg.yellow
.orange
  background: colors.bg.orange
.red
  background: colors.bg.red
.purple
  background: colors.bg.purple
.blue
  background: colors.bg.blue
.sky
  background: colors.bg.sky

  