// STYLUS - application.styl

@import "whitespace-reset.css"
@import "mixins"

*,
*:before,
*:after
  box-sizing: border-box

html,
body
  background-color: colors.default
body
  font: 14px fonts.default, Arial, Helvetica, sans-serif
  color: colors.txt.main
header
  height: 40px
  padding: 7px
  background: colors.shaded.lowBlk
  text-align: center
  div
    display: inline-block
    height: 100%
    input
      height: 100%
      width: 180px
      padding: 5px
      border-radius: 5px
      font: 14px fonts.default, Arial, Helvetica, sans-serif
      color: colors.txt.main
      & + span
        position: relative
        right: 20px
  #logo
    margin-left: -90px
    h2
      font: 24px fonts.logo, cursive
      font-weight: bold
      color: colors.shaded.medWht
      &:hover
        color: colors.shaded.highWht
.userIcon
  height: 26px
  width: 26px
  padding-top: 4px
  text-align: center
  font-weight: bold
  background-color: colors.bg.tertiary
  border-radius: 100%

#board
  padding: 7px 10px
#boardHeader
  height: 40px
  h3
    font-size: 20px
    font-weight: bold
    color: colors.txt.secondary
    display: inline-block
    padding: 5px 7px
    border-radius: 5px
    &:hover
      background-color: colors.shaded.lowBlk
      cursor: pointer
  a
    color: #ffffff
    text-decoration: underline
    span
      padding-right: 5px

#lists
  display: inline-block
  vertical-align: top
  .list
    vertical-align: top
    width: 275px
    display: inline-block
    margin-right: 10px
    margin-bottom: 20px
    border-radius: 5px
    background-color: colors.bg.secondary
    h4
      margin: 10px
      cursor: pointer
    .cardList
      .card
        height: 75px
        padding: 8px
        margin: 10px
        border-radius: 5px
        background-color: #ffffff
        cursor: pointer
        &:hover
          background-color: colors.shaded.medWht
        .labels
          margin-bottom: 5px
          li
            display: inline-block
            height: 8px
            width: 40px
            margin-right: 5px
            border-radius: 3px
        .icons
          margin-top: 8px
          li
            display: inline-block
            margin-right: 20px
            vertical-align: top
            color: colors.shaded.medBlk
            span
              padding-right: 5px
#addList,
#addCard
  display: inline-block
  div
    padding: 5px
    border-radius: 5px
    width: 275px
    &:first-of-type
      display: none
      position: absolute
      height: 80px
      background-color: colors.bg.secondary
      input[type="text"]
        height: 36px
        width: 100%
        padding: 5px
        margin-bottom: 3px
        border-radius: 5px
        font: 14px fonts.default, Arial, Helvetica, sans-serif
        color: colors.txt.main
      .btn
        color: #ffffff
        background-color: colors.bg.green
        font-weight: bold
        margin-right: 10px
      a
        position: relative
        top: 3px
        color: colors.txt.tertiary
        font-size: 22px
    &:last-of-type
      height: 40px
      padding: 12px 10px
      color: colors.shaded.medWht
      background-color: colors.shaded.lowBlk
      cursor:  pointer
      &:hover
        background-color: colors.shaded.medBlk
        color: colors.shaded.highWht
#addCard
  div:first-of-type
    border-top-right-radius: 0
    border-top-left-radius: 0
  div:last-of-type
    display: block
    padding: 10px
    color: colors.shaded.medBlk
    border-top-right-radius: 0
    border-top-left-radius: 0
    &:hover
      background-color: colors.shaded.vLowBlk
      color: colors.shaded.highBlk
      text-decoration: underline

#cardInfo
  #cardInfoModal
    position: fixed
    top: 50px
    left: 50%
    min-height: 600px
    width: 760px
    padding: 15px
    margin-left: -380px
    border-radius: 5px
    background-color: colors.bg.secondary
    font-size: 14px
    h3
      font-size: 18px
      margin-bottom: 10px
    #details
      width: 580px
      div
        span
        & > div
          display: inline-block
          vertical-align: top
        span
          padding-right: 20px
          font-size: 22px
          color: colors.shaded.medBlk
          .userIcon
            margin-top: 10px
            font-size: 14px
            background-color: colors.shaded.lowBlk
            padding-top: 5px
        & > div
          width: 90%
          padding-bottom: 20px
          h2
            font-size: 20px
          p
            margin-bottom: 10px
            color: colors.shaded.medBlk
            a
              padding-left: 10px
          #cardDescription
            color: colors.txt.main
      #cardData
        #lblCtnr
          width: auto
          display: inline-block
          #labelList
            display: inline-block
            li
              display: inline-block
              height: 30px
              min-width: 40px
              color: #ffffff
              border-radius: 3px
              margin-right: 5px
              margin-bottom: 10px
              vertical-align: top
            #addLabelBtn
              background-color: colors.shaded.vLowBlk
              padding-top: 5px
              span
                padding: 0 12px
              &:hover
                background-color: colors.shaded.lowBlk
                cursor: pointer
        #dueCtnr
          width: auto
          display: inline-block
          margin-left: 15px
          #dueDate
            display: inline-block
            height: 30px
            width: 170px
            border-radius: 3px
            background-color: colors.shaded.vLowBlk
            font-size: 15px
            padding: 5px
            text-align: center
            &:hover
              cursor: pointer
              background-color: colors.shaded.lowBlk
      #cardComments
        textarea,
        button
          display: block
        textarea
          width: 100%
          min-height: 80px
          padding: 10px
          border-radius: 3px
          margin-bottom: 10px
          font: 14px fonts.default, Arial, Helvetica, sans-serif
          resize: none
          outline: none
          border: none
          box-shadow: 3px 3px 10px 0px rgba(173,168,173,1)
      #activity
        #commentList
          li
            h4,
            .userIcon
              position: relative
            h4
              font-size: 14px
              font-weight: bold
              display: inline-block
              padding-left: 10px
              margin-bottom: 10px
              right: 35px
            .userIcon
              display: inline-block
              font-size: 14px
              background-color: colors.shaded.lowBlk
              color: colors.shaded.medBlk
              right: 40px
            .comment
              width: 100%
              min-height: 40px
              padding: 10px
              border-radius: 3px
              margin-bottom: 10px
              font: 14px fonts.default, Arial, Helvetica, sans-serif
              background-color: #ffffff
              box-shadow: 3px 3px 10px 0px rgba(173,168,173,1)
              & + p
                font-size: 12px
          
    #actions
      width: 150px
      a
        text-decoration: none
        font-size: 22px
        padding-bottom: 40px
      div
        padding-left: 15px
        li
          height: 30px
          width: 100%
          padding: 6px 15px
          margin-bottom: 10px
          border-radius: 3px
          background-color: colors.shaded.vLowBlk
          font-weight: bold
          &:hover
            cursor: pointer
            background-color: colors.shaded.lowBlk
          span
            padding-right: 10px
            font-size: 18px
            position: relative
            top: 2px
    a
      text-decoration: underline
      color: colors.shaded.medBlk
      &:hover
        color: colors.shaded.highBlk

.left
  float: left
.right
  float: right
.clear
  clear: both

#changeBoardName
  position: absolute
  top: 87px
  left: 10px
  width: 300px
  height: 165px
  padding: 10px
  background-color: #ffffff
  border: 1px solid colors.shaded.lowBlk
  border-radius: 3px
  form
    position: relative
    & > div
      text-align: center
      padding-bottom: 10px
      margin-bottom: 10px
      border-bottom: 1px solid colors.shaded.medBlk
      p
        color: colors.shaded.medBlk
      a
        position: absolute
        top: 3px
        right: 3px
        color: colors.shaded.lowBlk
        cursor: pointer
        &:hover
          color: colors.shaded.medBlk
    input
      height: 30px
      width: 100%
      padding: 5px
      margin: 10px 0
      border-radius: 3px
      font: 14px fonts.default, Arial, Helvetica, sans-serif
    .btn
      width: 120px
      font-weight: bold
      &:hover
        background-color: #47a236
  .overlay
    background-color: rgba(0, 0, 0, 0)

.overlay
  background-color: colors.shaded.medBlk
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0

.btn
  height: 30px
  border-radius: 5px
  padding: 5px 15px
  font: 14px fonts.default, Arial, Helvetica, sans-serif
  cursor: pointer
  color: #ffffff
  background-color: colors.bg.green
  &:disabled
    color: colors.shaded.medBlk
    background-color: colors.shaded.medWht
    cursor: default

.green
  background: colors.bg.green
.yellow
  background: colors.bg.yellow
.orange
  background: colors.bg.orange
.red
  background: colors.bg.red
.purple
  background: colors.bg.purple
.blue
  background: colors.bg.blue
.sky
  background: colors.bg.sky

  