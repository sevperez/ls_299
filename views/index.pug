extends layout

block content
  header
    div.left
      input(id="searchBar")
      span.fa.fa-search
    div.right
      #userIcon LS
    #logo
      h2
        i.fa.fa-trello
        |  Trello Clone
  #board.clear
    #boardHeader
    #boardMain
      ul(id="lists")
        li(id="addList")
          div
            form(method="post" action="#")
              input(type="text" id="newListName" name="newListName" placeholder="Add a list..." autofocus)
              button.btn(type="submit") Save
              a(class="fa fa-times" href="#")
          div Add a list...
          
    